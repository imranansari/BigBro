!!! Strict
%html{:lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title BigBro
    %link{:href => "css/bigbro.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/flex-box.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/slidepanel.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
    %script{:src => "js/lib/jquery-1.4.4.js"}
    %script{:src => "js/lib/jquery.layout.min.js"}
    %script{:src => "js/lib/handlebars.js"}
    %script{:src => "js/lib/underscore-1.1.3.js"}
    %script{:src => "js/util.js"}
    %script{:src => "js/lib/jquery.slidePanel.js"}
    %script{:src => "js/bigbro.js"}
  %body
    .ui-layout-north Lincoln BigBro
    .ui-layout-west
      #search
        %a#trigger2.trigger.left{:href => "#"} Filter
