%html
  %head
    %title BigBro Add event
    %link{:href => "css/bigbro.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "js/lib/jquery-1.4.4.js"}
    %script{:src => "js/lib/jquery.json-1.3.min.js"}
    %script{:src => "js/addactivity.js"}
  %body
    #event
      %form{:action => '/activity', :method => 'POST', :id => 'eventForm'}
        %table
          %tr
            %td
              User
            %td
              %input{:type => 'text', :name => 'user'}
          %tr
            %td
              App
            %td
              %select{:name => 'application'}
                %option{:value => "ipresent"} iPresent
                %option{:value => "iengage"} iEngage
                %option{:value => "lincpad"} LincPad
          %tr
            %td
              Event
            %td
              %input{:type => 'text', :name => 'event'}
          %tr
            %td
              Device Type
            %td
              %select{:name => 'deviceType'}
                %option{:value => "android_phone"} Android Phone
                %option{:value => "android_tablet"} Android Tablet
                %option{:value => "iphone"} iPhone
                %option{:value => "ipad"} iPad
          %tr
            %td
              OS Version
            %td
              %input{:type => 'text', :name => 'osVersion'}
          %tr
            %td
              Latitude
            %td
              %input{:type => 'text', :id => 'lat',:name => 'lat'}
          %tr
            %td
              Longitude
            %td
              %input{:type => 'text', :id => 'lng',:name => 'lng'}
          %tr
            %td
              %input{:type => 'button', :id => 'submitActivity', :value => 'Post Event'}