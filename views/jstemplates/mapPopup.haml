%script{:name => "mapPopup_tpl", :type => "text/x-handlebars-template"}
  .mapPopup
    %div{:style => "display: table;"}
      %div{:style => "display: table-row;"}
        %div{:style => "display: table-cell;"}
          %span
            %img.icon{:src => '/images/user.png'}
          %span.user {{user}}
      %div{:style => "display: table-row"}
        %div{:style => "display: table-cell;"}
          %span
            {{> deviceIcon this}}
          %span {{application}}
      %div{:style => "display: table-row"}
        %div{:style => "display: table-cell;"}
          %span
          %img.icon{:src => '/images/event.png'}
          %span {{event}}
      %div{:style => "display: table-row"}
        %div{:style => "display: table-cell;"}
          %span
          %img.icon{:src => '/images/map.png'}
          %span {{location}}